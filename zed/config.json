{
  "show_edit_predictions": false,
  "base_keymap": "Emacs",
  "icon_theme": "Material Icon Theme",
  "vim_mode": true,
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    }
  },
  "theme": "Kanagawa Dragon",
  "soft_wrap": "editor_width",
  "cursor_blink": false,
  "relative_line_numbers": false,
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 0,
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },

  "inlay_hints": {
    "max_length": null,
    "lifetime_elision_hints": {
      "use_parameter_names": true,
      "enable": "skip_trivial"
    },
    "closure_return_type_hints": {
      "enable": "always"
    }
  },

  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "features": {
    "edit_prediction_provider": "zed"
  },
  "languages": {
    "TypeScript": {
      "language_servers": [
        "typescript-language-server",
        "tailwindcss-language-server"
      ]
    }
  },
  "lsp": {
    "typescript-language-server": {
      "settings": {
        "typescript": {
          "inlayHints": {
            "parameterNames": true,
            "parameterTypes": true,
            "variableTypes": true,
            "propertyDeclarationTypes": true,
            "functionLikeReturnTypes": true,
            "enumMemberValues": true
          }
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "typescript": "html"
        },
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
        }
      }
    }
  }
}
